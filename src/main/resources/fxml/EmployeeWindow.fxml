        <TextField fx:id="idFieldNip" layoutX="550.0" layoutY="110.0" prefWidth="110.0" promptText="NIP"/>
        <TextField fx:id="idFieldDateAdded" layoutX="550.0" layoutY="160.0" prefWidth="110.0"
