                <TableColumn fx:id="firstName" prefWidth="70.0" text="Imie"/>
                <TableColumn fx:id="lastName" prefWidth="70.0" text="Nazwisko"/>
                <TableColumn fx:id="town" prefWidth="70.0" text="Miasto"/>
                <TableColumn fx:id="street" prefWidth="70.0" text="Ulica"/>
                <TableColumn fx:id="postcode" prefWidth="70.0" text="Kod poczt."/>
                <TableColumn fx:id="telephoneNumber" text="Telefon"/>
                <TableColumn fx:id="nip" text="NIP"/>
                <TableColumn fx:id="dateAdded" prefWidth="121.0" text="Data"/>
            </columns>
        </TableView>
        <Label fx:id="lblBadDateAdded" layoutX="553.0" layoutY="143.0"/>
    </children>
